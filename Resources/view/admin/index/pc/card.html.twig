{% trans_default_domain('article.admin') %}

<tr class="vertical-middle" id="{{ item.id }}">
    <td class="text-nowrap">
        {# Пользовательское меню #}
        {{ include(_self|replace({ "card.html.twig": "_usecase.html.twig" })) }}
    </td>

    {# Тип профиля #}
    <td class="ms-0 text-center">
        <div class="w-25">
            <span class="d-inline-block text-truncate text-emphasis align-middle"
                  style="max-width: 150px;">
                {% if item.name %}
                    {{ item.name }}
                {% else %}
                    {{ 'filter.unchosen_profile'|trans }}
                {% endif %}
            </span>
        </div>
    </td>

    {# Заголовок ответа #}
    <td style="min-width: 350px;">
        <a
                class="btn btn-sm btn-link text-decoration-none disabled"
                href="{{ path('article:admin.newedit.edit', { id: item.id }) }}"
                data-bs-toggle="modal"
                data-bs-target="#modal"

        >
            <span class="d-inline-block text-truncate  align-middle" style="max-width: 350px;">
                {{ item.title|raw }}
            </span>
        </a>
    </td>

    {# Содержимое ответа #}
    <td class="w-100">
        <span class="d-inline-block text-truncate align-middle"
              style="max-width: 600px;">
            {{ item.content|striptags }}
        </span>
    </td>
</tr>